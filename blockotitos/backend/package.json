{
  "name": "poap-backend",
  "version": "0.1.0",
  "description": "Backend admin for SPOT contract approvals",
  "type": "module",
  "scripts": {
    "dev": "node --watch ./src/server.js",
    "start": "node ./src/server.js",
    "test": "npm run test:unit",
    "test:unit": "cross-env NODE_ENV=test MOCK_MODE=true LOG_FILE=./logs/backend.test.log node --test",
    "test:integration": "cross-env NODE_ENV=test RUN_INTEGRATION_TESTS=true LOG_FILE=./logs/backend.integration.log node --test \"./test/integration/*.test.js\""
  },
  "dependencies": {
    "@stellar/stellar-sdk": "^12.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "multer": "^2.0.2"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "supertest": "^6.3.4"
  }
}
